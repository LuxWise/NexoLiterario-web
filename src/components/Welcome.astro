---
import background from '../assets/background.svg';
const initFont = "Libre Baskerville";
const bluesky = "#87CEEB"
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<div class="title-container">
		<h1>
			Nexo Literario
		</h1>
	</div>
	
</div>

<style define:vars={{initFont, bluesky}}>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	.title-container{
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100vh;
		
		h1{
			font-size: clamp(8rem, 8vh, 12rem);
			font-family: var(--initFont);
			font-weight: 500;
			user-select: none;
			-webkit-text-stroke: 1px white;
		}
	}

	
</style>
